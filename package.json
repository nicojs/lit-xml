{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "The monorepo for Lit XML",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "all": "npm run clean && npm run lint && nx run-many -t build,test",
    "build": "nx run-many -t build",
    "clean": "rimraf packages/*/dist",
    "test": "npx nx run-many -t test",
    "lint": "npm run lint:prettier && npm run lint:ts",
    "lint:prettier": "prettier --check .",
    "lint:ts": "eslint .",
    "version": "prettier --write lerna.json && git add lerna.json"
  },
  "author": {
    "email": "jansennico@gmail.com",
    "name": "Nico Jansen",
    "url": "https://github.com/nicojs"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^10.0.0",
    "c8": "^10.1.2",
    "chai": "^5.1.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^9.9.0",
    "lerna": "^8.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.2.0"
  }
}
