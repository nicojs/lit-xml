{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "The monorepo for Lit XML",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "all": "npm run clean && npm run build && npm run lint && npm run test",
    "build": "lerna run build --stream",
    "clean": "rimraf packages/*/dist",
    "test": "lerna run test",
    "lint": "npm run lint:prettier && npm run lint:ts",
    "lint:prettier": "prettier --check .",
    "lint:ts": "eslint .",
    "version": "prettier --write lerna.json && git add lerna.json"
  },
  "author": {
    "email": "jansennico@gmail.com",
    "name": "Nico Jansen",
    "url": "https://github.com/nicojs"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^10.0.0",
    "c8": "^9.1.0",
    "chai": "^5.1.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.57.0",
    "lerna": "^8.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.8.0"
  }
}
