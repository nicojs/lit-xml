{
  "name": "vscode-lit-xml",
  "displayName": "lit-xml",
  "description": "Syntax highlighting xml inside of JavaScript and TypeScript lit-xml tagged template strings",
  "publisher": "hugo-vrijswijk",
  "license": "Apache-2.0",
  "version": "0.4.6",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicojs/lit-xml.git",
    "directory": "packages/vscode-lit-xml"
  },
  "scripts": {
    "publish": "vsce publish -p $VSCODE_TOKEN",
    "build": "vsce package"
  },
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "lit-xml",
    "javascript",
    "typescript",
    "xml",
    "template"
  ],
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "text.html"
        ],
        "scopeName": "text.lit-xml",
        "path": "./syntaxes/lit-xml.json",
        "embeddedLanguages": {
          "meta.embedded.block.xml": "xml"
        }
      },
      {
        "injectTo": [
          "source.js",
          "source.js.jsx",
          "source.jsx",
          "source.ts",
          "source.tsx",
          "text.html"
        ],
        "scopeName": "text.lit-xml.string.injection",
        "path": "./syntaxes/lit-xml-string-injection.json",
        "embeddedLanguages": {
          "meta.template.expression.ts": "typescript"
        }
      }
    ]
  },
  "capabilities": {
    "virtualWorkspaces": true
  },
  "devDependencies": {
    "vsce": "^2.2.0"
  }
}
